@model dynamic

@{
    ViewBag.Title = "조돈일기";
    Layout = "_Layout";
}

<div class="form">
    <h2>사람들이 만든 일기가 공유 되는</h2>
    <h1>조돈일기</h1>
</div>

<style>
    .form {
        text-align: center;
        font-size: 1.5rem;
        width: 300px;
        height: 300px;
        position:absolute;
        left:50%;
        top: 55%;
        margin-left:-150px;
        margin-top:-150px;
    }

    h2 {
        animation: fadein 2s;
        -moz-animation: fadein 2s; /* Firefox */
        -webkit-animation: fadein 2s; /* Safari and Chrome */
        -o-animation: fadein 2s; /* Opera */
    }

    h1 {
        margin-top: 3%;
        animation: fadein 7s;
        -moz-animation: fadein 7s; /* Firefox */
        -webkit-animation: fadein 7s; /* Safari and Chrome */
        -o-animation: fadein 7s; /* Opera */
    }

    @@keyframe fadein {
        from {
            opacity:0;
        }
        to {
            opacity:1;
        }
    }
    @@-moz-keyframes fadein { /* Firefox */
        from {
            opacity:0;
        }
        to {
            opacity:1;
        }
    }
    @@-webkit-keyframes fadein { /* Safari and Chrome */
        from {
            opacity:0;
        }
        to {
            opacity:1;
        }
    }
    @@-o-keyframes fadein { /* Opera */
        from {
            opacity:0;
        }
        to {
            opacity: 1;
        }
    }
</style>