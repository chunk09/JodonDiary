@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>

<nav class="nav">
    <a class="title" href="/">조돈일기</a>

    <ul>
        @if (Context.Session.GetInt32("Jodon-Id") == null)
        {
            <li><a href="/login">로그인</a></li>
            <li><a href="/register">회원가입</a></li>
        }
        else
        {
            <li><a href="/logout">로그아웃</a></li>
            <li><a href="/write">일기작성</a></li>
            <li><a href="/my-list">내 일기</a></li>
        }
        <li><a href="/another-list">다른 유저 일기 보기</a></li>
    </ul>
</nav>

@RenderBody()

</body>

<style>
    body {
        background-color: #282828;
        color: white;
        overflow: auto;
    }
    *{padding:0;margin:0}
    ul,ol{list-style:none}
    a{text-decoration:none;color:#fff;font-size:15px}
    nav{position: fixed;width:100vw;overflow:hidden;height:80px;background-color:#282828; border-bottom: 1px solid white}
       
    nav a {
      display: block; /* a태그는 글자성격 = inline */
      float: left;
      font-size: 25px;
      font-weight: 700;
      line-height: 80px;
      padding: 0 1px;
    }
    
    .title {
       padding: 0 40px;
    }
    
    nav ul {
      float: right;
    }
    
    nav ul li {
      float: left;
      padding: 0 30px;
      line-height: 80px;
    }
    
    body::-webkit-scrollbar {
      width: 10px;
     }
    body::-webkit-scrollbar-thumb {
      background-color: #2f3542;
      border-radius: 10px;
    }
    body::-webkit-scrollbar-track {
      background-color: gray;
      border-radius: 10px;
      box-shadow: inset 0px 0px 5px white;
    }
</style>
</html>